<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pit_scouting.PitScoutingFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="1010dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/cardview_shadow_start_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:text="167 Pit Scouting Form"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="900dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarSize="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/team_name"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Team Number"
                                    android:textSize="10dp" />

                                <EditText
                                    android:id="@+id/team_name_answer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="text"
                                    android:text="Team number"
                                    android:textSize="15dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/scout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Scout Name"
                                    android:textSize="10dp" />

                                <EditText
                                    android:id="@+id/scout_answer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="text"
                                    android:text="Scout name"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/coach"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Drive Coach Name"
                                    android:textSize="10dp" />

                                <EditText
                                    android:id="@+id/coach_answer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="text"
                                    android:text="Drive coach name"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/drive_base"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Drive base"
                                    android:textSize="10dp" />

                                <EditText
                                    android:id="@+id/drive_base_answer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="text"
                                    android:text="Drive base"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <Switch
                                    android:id="@+id/rookieTeam"
                                    android:layout_width="336dp"
                                    android:layout_height="wrap_content"
                                    android:text="Rookie Team?" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/autoCount"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="How many autos?" />

                                    <EditText
                                        android:id="@+id/editTextNumber2"
                                        android:layout_width="match_parent"
                                        android:layout_height="32dp"
                                        android:ems="10"
                                        android:inputType="number" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="336dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Switch
                                    android:id="@+id/hasAuto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Do you have an auto?" />

                                <Switch
                                    android:id="@+id/doesPreload"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Do you preload?" />

                                <Switch
                                    android:id="@+id/doesShoot"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Do you shoot?" />

                                <Switch
                                    android:id="@+id/doesIntake"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Do you intake?" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/startingArea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Where do you start?"
                                    android:textSize="15dp" />

                                <EditText
                                    android:id="@+id/editTextTextMultiLine"
                                    android:layout_width="match_parent"
                                    android:layout_height="79dp"
                                    android:ems="10"
                                    android:gravity="start|top"
                                    android:inputType="textMultiLine"
                                    android:text="Enter their start thingy or whatever idfk"
                                    android:textSize="15dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/whereDoYouScore"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Where do you score?" />

                                <LinearLayout
                                    android:layout_width="316dp"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:id="@+id/amp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Amp" />

                                    <CheckBox
                                        android:id="@+id/speaker"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Speaker" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>