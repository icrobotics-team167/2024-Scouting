<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pit_scouting.PitScoutingFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="1010dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:background="#c48252">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeTextType="uniform"
                    android:text="167 Pit Scouting Form"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="900dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarSize="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="100dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="40dp">

                            <TextView
                                android:id="@+id/basic_questions"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:autoSizeTextType="uniform"
                                android:text="Basic Info Questions"
                                android:textAlignment="center" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/team_name"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Team Number" />

                                <EditText
                                    android:id="@+id/team_name_answer"
                                    android:layout_width="109dp"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textSize="15dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/scout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Scout Name" />

                                <EditText
                                    android:id="@+id/scout_answer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="text"
                                    android:text="Scout name"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/coach"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Drive Coach Name" />

                                <EditText
                                    android:id="@+id/coach_answer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="text"
                                    android:text="Drive coach name"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/drive_base"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Drive base" />

                                <EditText
                                    android:id="@+id/drive_base_answer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="text"
                                    android:text="Drive base"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <Switch
                                    android:id="@+id/rookie_team"
                                    android:layout_width="336dp"
                                    android:layout_height="wrap_content"
                                    android:text="Rookie Team?" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/lake_chargoggagoggmanchauggagoggchaubunagungamaugg"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Can you pronounce this? (MOST IMPORTANT QUESTION): Lake Chargoggagoggmanchauggagoggchaubunagungamaugg" />

                                <SeekBar
                                    android:id="@+id/lake_chargoggagoggmanchauggagoggchaubunagungamaugg_seekbar"
                                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                                    android:layout_width="462dp"
                                    android:layout_height="wrap_content"
                                    android:max="3" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="40dp">

                            <TextView
                                android:id="@+id/auto_questions"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:autoSizeTextType="uniform"
                                android:text="Auto Questions"
                                android:textAlignment="center" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/auto_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="How many autos?" />

                                <EditText
                                    android:id="@+id/auto_count_number"
                                    android:layout_width="109dp"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textAlignment="center" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="336dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Switch
                                    android:id="@+id/has_auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Do you have an auto?" />

                                <Switch
                                    android:id="@+id/does_preload"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Do you preload?" />

                                <Switch
                                    android:id="@+id/does_shoot"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Do you shoot?" />

                                <Switch
                                    android:id="@+id/does_intake"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Do you intake?" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/starting_area"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Where do you start?" />

                                <LinearLayout
                                    android:layout_width="712dp"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:id="@+id/does_matter"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Does it matter? (All)" />

                                    <CheckBox
                                        android:id="@+id/left"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Left" />

                                    <CheckBox
                                        android:id="@+id/right"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Right" />

                                    <CheckBox
                                        android:id="@+id/center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Center" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/where_do_you_score"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Where do you score?" />

                                <LinearLayout
                                    android:layout_width="452dp"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:id="@+id/amp_and_speaker"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Both" />

                                    <CheckBox
                                        android:id="@+id/amp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Amp" />

                                    <CheckBox
                                        android:id="@+id/speaker"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Speaker" />
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/score_auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="How many notes can you score?" />

                                    <EditText
                                        android:id="@+id/score_count_auto"
                                        android:layout_width="109dp"
                                        android:layout_height="wrap_content"
                                        android:ems="10"
                                        android:inputType="number"
                                        android:text="0"
                                        android:textAlignment="center"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="40dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/teleop_questions"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:autoSizeTextType="uniform"
                                android:text="Teleop Questions"
                                android:textAlignment="center" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/game_strategy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Game Strategy" />

                                <EditText
                                    android:id="@+id/game_strategy_answer"
                                    android:layout_width="match_parent"
                                    android:layout_height="84dp"
                                    android:ems="10"
                                    android:gravity="start|top"
                                    android:inputType="textMultiLine"
                                    android:text="Enter a description of their strategy." />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/intake"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Intake" />

                                <LinearLayout
                                    android:layout_width="445dp"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:id="@+id/ground_and_source"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Both" />

                                    <CheckBox
                                        android:id="@+id/ground"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Ground" />

                                    <CheckBox
                                        android:id="@+id/source"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Source" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/longest_shot"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="What is the farthest shot you can make?" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:id="@+id/against_subwoofer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Against subwoofer" />

                                    <CheckBox
                                        android:id="@+id/against_podium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Against podium" />

                                    <CheckBox
                                        android:id="@+id/in_your_wing"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="In you wing" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/score_teleop"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="How many points can you score?" />

                                <EditText
                                    android:id="@+id/score_teleop_answer"
                                    android:layout_width="109dp"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:textAlignment="center"
                                    android:text="0"
                                    android:inputType="number" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="40dp">

                            <TextView
                                android:id="@+id/endgame_questions"
                                android:layout_width="match_parent"
                                android:layout_height="25dp"
                                android:autoSizeTextType="uniform"
                                android:text="Endgame Questions"
                                android:textAlignment="center" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <Switch
                                    android:id="@+id/can_climb"
                                    android:layout_width="336dp"
                                    android:layout_height="wrap_content"
                                    android:text="Do you climb?" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/climb_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="How long does it take you to climb?" />

                                <EditText
                                    android:id="@+id/climb_time_answer"
                                    android:layout_width="109dp"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:text="0"
                                    android:textAlignment="center" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <Switch
                                        android:id="@+id/can_get_harmony"
                                        android:layout_width="336dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Can you get a harmony?" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <Switch
                                    android:id="@+id/can_score_trap"
                                    android:layout_width="336dp"
                                    android:layout_height="wrap_content"
                                    android:text="Do you score on the trap?" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#eb83d4"
                            android:text="Submit" />

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>